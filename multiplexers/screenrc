# Set scrollback buffer.
defscrollback 5000

# Customize the status line
hardstatus alwayslastline "%{b kw}%H %{b kg}âžœ%{b kw} %S %{b kw} %{-b kw}%u %-Lw%{=b bK}%50> %n%f %t %{-}%+Lw%<"

startup_message off
altscreen on

bind -k kl focus left
bind -k ku focus up
bind -k kr focus right
bind -k kd focus down

